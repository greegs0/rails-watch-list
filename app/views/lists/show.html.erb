<div class="d-flex justify-content-between align-items-center mb-3">
  <h1 class="mb-0"><%= @list.name %></h1>
  <div class="d-flex gap-2">
    <%= link_to "Add a movie", new_list_bookmark_path(@list), class: "btn btn-primary" %>
    <%= link_to "All lists", lists_path, class: "btn btn-outline-secondary" %>
  </div>
</div>

<% if @list.bookmarks.any? %>
  <div class="row g-3">
    <% @list.bookmarks.each do |bookmark| %>
      <div class="col-6 col-md-4 col-lg-3">
        <div class="card h-100 shadow-sm">
          <% if bookmark.movie.poster_url.present? %>
            <%= image_tag bookmark.movie.poster_url, class: "card-img-top movie-cover" %>
          <% end %>
          <div class="card-body d-flex flex-column">
            <h6 class="card-title mb-1"><%= bookmark.movie.title %></h6>
            <small class="text-muted mb-2">‚≠ê <%= bookmark.movie.rating %></small>
            <p class="card-text small flex-grow-1"><%= bookmark.comment %></p>
            <%= link_to "Remove",
                        bookmark_path(bookmark),
                        data: { turbo_method: :delete, turbo_confirm: "Delete this bookmark?" },
                        class: "btn btn-outline-danger btn-sm mt-2" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% else %>
  <div class="alert alert-info">No movies yet. Add your first one!</div>
<% end %>

<hr class="my-4">
<h3>Add a movie</h3>
<%= render "bookmarks/form", list: @list, bookmark: Bookmark.new %>
