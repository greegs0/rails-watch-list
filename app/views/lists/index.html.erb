<h1 class="mb-4">My Lists</h1>

<div class="row g-3">
  <% @lists.each do |list| %>
    <div class="col-12 col-sm-6 col-lg-4">
      <% bg_style =
        if list.photo.attached?
          "background-image: linear-gradient(rgba(0,0,0,.35), rgba(0,0,0,.35)), url('#{cl_image_path(list.photo.key, height: 300, crop: :fill, width: 400)}'); background-size: cover; background-position: center;"
        else
          "background-image: linear-gradient(rgba(0,0,0,.35), rgba(0,0,0,.35)), url(https://images.unsplash.com/photo-1652077859695-de2851a95620?ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxzZWFyY2h8M3x8JTNGfGVufDB8fDB8fHww&auto=format&fit=crop&q=60&w=500); background-size: cover; background-position: center;"
        end
      %>
      <div class="card shadow-sm h-100 text-white" style="<%= bg_style %>">
        <div class="card-body d-flex flex-column">
          <h5 class="card-title mb-2"><%= list.name %></h5>
          <p class="text-light-50 mb-4"><%= pluralize(list.movies.count, "movie") %></p>
          <div class="mt-auto d-flex gap-2">
            <%= link_to "Open", list_path(list), class: "btn btn-primary btn-sm" %>
            <%= link_to "Add movie", new_list_bookmark_path(list), class: "btn btn-outline-light btn-sm" %>
          </div>
        </div>
      </div>

    </div>
  <% end %>
</div>

<%= link_to "Create a new list", new_list_path, class: "btn btn-success" %>
