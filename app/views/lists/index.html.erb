<h1 class="mb-4">My Lists</h1>

<div class="row g-3">
  <% @lists.each do |list| %>
    <div class="col-12 col-sm-6 col-lg-4">
      <div class="card shadow-sm h-100">
        <div class="card-body d-flex flex-column">
          <h5 class="card-title mb-2"><%= list.name %></h5>
          <p class="text-muted mb-4"><%= pluralize(list.movies.count, "movie") %></p>
          <div class="mt-auto d-flex gap-2">
            <%= link_to "Open", list_path(list), class: "btn btn-primary btn-sm" %>
            <%= link_to "Add movie", new_list_bookmark_path(list), class: "btn btn-outline-secondary btn-sm" %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>

<hr class="my-4">
<%= link_to "Create a new list", new_list_path, class: "btn btn-success" %>
